duration = int(input("Please, input the duration "))

if duration < 60:
    print(duration, 'sec')
elif duration >= 60:
    print(duration / 60, 'min')
elif duration > 60:
    print(duration // 3600,'h', duration // 60 % 60, 'min', duration % 60, 'sec')
if duration > 60:
    print(duration // 86400 % 86400, 'd', duration % 86400 // 3600, 'h', duration // 60 % 60, 'min', duration % 60, 'sec')
